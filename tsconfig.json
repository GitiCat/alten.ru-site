{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "jsx": "react",
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "lib": ["DOM", "ES5", "ScriptHost", "ES2015.Promise"],
        "noImplicitAny": false,
        "outDir": "build",
        "moduleResolution": "Node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}